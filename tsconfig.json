{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "es5",
      "es2015"
    ],
    "outDir": "./dist/",
    "moduleResolution": "node",
    "sourceMap": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "target": "es6",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
}